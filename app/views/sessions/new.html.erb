<div style="text-align:center;">
  <h1>User Login</h1>
  <br>
  <br>
  <br>
  <%= form_with url: login_path, method: :post, local: true do |f| %>
    <table style="margin:auto;">
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
    </table>
    <%= f.submit 'Login' %>
  <% end %>
</div>